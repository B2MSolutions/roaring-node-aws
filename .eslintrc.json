{
  "extends": ["@acuris"],
  "plugins": ["node"],
  "rules": {
    "node/no-missing-require": 0,
    "node/no-unpublished-require": 0,
    "global-require": 0
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-throw-literal": 0
      }
    }
  ],
  "env": {
    "mocha": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true
  }
}
